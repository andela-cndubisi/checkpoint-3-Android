<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityFragment"
    android:columnCount="4"
    android:columnOrderPreserved="false"
    android:rowCount="6"
    android:id="@+id/Gridkeypad">

    <Button
        android:background="@drawable/operandborder"
        android:onClick="clearPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/clear"
        android:id="@+id/btnC"
        android:textSize="40sp"
        android:layout_row="0"
        android:layout_column="0"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_rowSpan="1"
        android:textColor="@android:color/white" />

    <Button
        android:onClick="negatePressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/negate"
        android:id="@+id/btnNegate"
        android:layout_row="0"
        android:textSize="40sp"
        android:layout_column="1"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"

        android:onClick="operationPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/divide"
        android:id="@+id/btnDivide"
        android:layout_row="0"
        android:layout_column="2"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"
        android:onClick="operationPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/multiply"
        android:id="@+id/btnMultiply"
        android:layout_row="0"
        android:layout_column="3"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operationborder" />

    <Button
        android:background="@drawable/operandborder"
        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/seven"
        android:id="@+id/btn7"
        android:layout_row="1"
        android:layout_column="0"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white" />
    <Button
        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/eight"
        android:id="@+id/btn8"
        android:layout_row="1"
        android:layout_column="1"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/nine"
        android:id="@+id/btn9"
        android:layout_row="1"
        android:layout_column="2"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button

        android:textSize="40sp"
        android:onClick="operationPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/minus"
        android:id="@+id/btnMinus"
        android:layout_row="1"
        android:layout_column="3"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operationborder" />

    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/four"
        android:id="@+id/btn4"
        android:layout_row="2"
        android:layout_column="0"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/five"
        android:id="@+id/btn5"
        android:layout_row="2"
        android:layout_column="1"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/six"
        android:id="@+id/btn6"
        android:layout_row="2"
        android:layout_column="2"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"
        android:onClick="operationPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/add"
        android:id="@+id/btnAdd"
        android:layout_row="2"
        android:layout_column="3"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operationborder" />

    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/one"
        android:id="@+id/btn1"
        android:layout_row="3"
        android:layout_column="0"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />
    <Button

        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/two"
        android:id="@+id/btn2"
        android:layout_row="3"
        android:layout_column="1"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/three"
        android:id="@+id/btn3"
        android:layout_row="3"
        android:layout_column="2"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_gravity="fill|left|right"
        android:layout_columnWeight="1"
        android:layout_rowSpan="1"
        android:layout_columnSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"
        android:onClick="enterPressed"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/equals"
        android:id="@+id/btnE"
        android:layout_row="3"
        android:layout_column="3"
        android:layout_rowSpan="2"
        android:layout_gravity="fill|bottom|top"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operationborder" />

    <Button
        android:textSize="40sp"
        android:onClick="digitPressed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/zero"
        android:id="@+id/btn0"
        android:layout_row="4"
        android:layout_column="0"
        android:gravity="center"
        android:layout_gravity="fill|left|right"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="2"
        android:layout_rowSpan="1"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

    <Button
        android:textSize="40sp"
        android:onClick="periodPressed"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="@string/period"
        android:id="@+id/btnp"
        android:layout_row="4"
        android:layout_column="2"
        android:gravity="center"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_columnSpan="1"
        android:layout_gravity="fill"
        android:textColor="@android:color/white"
        android:background="@drawable/operandborder" />

</GridLayout>